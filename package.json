{
  "name": "tupoto",
  "version": "0.1.3",
  "description": "tupo.to - acortador de URL's",
  "main": "src/main.js",
  "scripts": {
    "serve": "vue-cli-service serve",
    "vue:build": "vue-cli-service build",
    "build": "npm run functions:build && npm run vue:build",
    "lint": "eslint functions/**/*.js src/**/*.{js,vue} --fix",
    "mock": "json-server --watch mock/db.json",
    "functions:build": "netlify-lambda build functions",
    "prefunctions:serve": "npm run functions:build",
    "functions:serve": "netlify-lambda serve functions",
    "prenetlify-local": "npm run functions:build",
    "netlify-local": "netlify-local -n netlify-dev.toml serve",
    "vue:watch": "vue-cli-service build --watch --mode development",
    "server": "run-p vue:watch netlify-local",
    "format": "prettier-standard '{src,functions}/**/*.js'"
  },
  "engines": {
    "node": "12.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devschile/tupoto.git"
  },
  "keywords": [
    "shorten",
    "devschile"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "contributors": [
    "Jorge Epu√±an <juanbrujo@gmail.com> (http://www.csslab.cl)"
  ],
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/devschile/tupoto/issues"
  },
  "homepage": "https://github.com/devschile/tupoto#readme",
  "dependencies": {
    "@sentry/browser": "5.5.0",
    "@sentry/integrations": "5.5.0",
    "@sentry/node": "5.5.0",
    "axios": "0.21.1",
    "config-dburi": "1.0.0",
    "ioredis": "4.11.2",
    "short-unique-id": "1.1.1",
    "validator": "11.1.0",
    "vue": "2.6.10",
    "vue-router": "3.0.7",
    "winston": "3.2.1",
    "winston-sentry-node": "0.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "@eclass/semantic-release-netlify": "1.0.1",
    "@octokit/rest": "16.28.4",
    "@semantic-release/changelog": "3.0.4",
    "@semantic-release/commit-analyzer": "6.2.0",
    "@semantic-release/git": "7.0.16",
    "@semantic-release/github": "5.4.2",
    "@semantic-release/npm": "5.1.13",
    "@semantic-release/release-notes-generator": "7.2.1",
    "@vue/cli-plugin-babel": "3.9.2",
    "@vue/cli-plugin-eslint": "3.9.2",
    "@vue/cli-service": "3.9.2",
    "babel-eslint": "10.0.2",
    "eslint": "6.0.1",
    "eslint-config-jsdoc-strict": "2.0.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-config-standard": "13.0.1",
    "eslint-plugin-array-func": "3.1.3",
    "eslint-plugin-eslint-comments": "3.1.2",
    "eslint-plugin-import": "2.18.0",
    "eslint-plugin-jsdoc": "15.5.2",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-sonarjs": "0.4.0",
    "eslint-plugin-standard": "4.0.0",
    "eslint-plugin-vue": "5.2.3",
    "husky": "3.0.0",
    "json-server": "0.15.0",
    "lint-staged": "9.2.0",
    "netlify-lambda": "1.5.0",
    "netlify-local": "1.8.2",
    "npm-run-all": "4.1.5",
    "prettier-standard": "9.1.1",
    "sass-loader": "7.1.0",
    "semantic-release": "19.0.3",
    "vue-template-compiler": "2.6.10"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended",
      "standard",
      "jsdoc-strict",
      "plugin:promise/recommended",
      "plugin:security/recommended",
      "plugin:eslint-comments/recommended",
      "plugin:array-func/all",
      "plugin:sonarjs/recommended"
    ],
    "plugins": [
      "promise",
      "security",
      "eslint-comments",
      "array-func",
      "sonarjs"
    ],
    "rules": {
      "no-console": "error",
      "require-await": "error"
    }
  },
  "eslintIgnore": [
    "build",
    "dist",
    "mock",
    "public"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 5%",
    "last 5 versions",
    "not ie <= 8"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "functions/**/*.js": [
      "eslint --fix",
      "prettier-standard",
      "git add"
    ],
    "src/**/*.js": [
      "eslint --fix",
      "prettier-standard",
      "git add"
    ],
    "src/**/*.vue": [
      "eslint --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "automerge": "minor",
    "extends": [
      "config:js-app",
      "docker:disable"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github",
      "@eclass/semantic-release-netlify"
    ]
  }
}
